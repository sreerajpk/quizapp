<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <corners android:radius="15dp" />

    <gradient
        android:angle="45"
        android:centerColor="#EC0DFC"
        android:centerX="44%"
        android:endColor="#61FF4F"
        android:startColor="#E8E8E8"
        android:type="linear" />

    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />

    <size
        android:height="100dp"
        android:width="150dp" />

    <stroke
        android:width="5dp"
        android:color="#FFFFFF" />

</shape>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/amateur_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_layout_4"
            android:text="@string/amateur"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/expert_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_layout_4"
            android:text="@string/expert"
            android:textStyle="bold"
            android:typeface="serif" 
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/master_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_layout_4"
            android:text="@string/master"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/difficulty_level"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="#FFFF8D"
        android:contentDescription="@string/no_description"
        android:src="@drawable/back" />

</RelativeLayout><!-- From: file:/home/user/Android/QuizApp/app/src/main/res/layout/difficulty_level_layout.xml -->